<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.MyReward">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/statsbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            ><ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/back"
                    android:paddingLeft="@dimen/_10sdp"
                    ></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:text="My Rewards" android:fontFamily="@font/lato"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>


        </LinearLayout>
        <ImageView
            android:layout_below="@+id/statsbar"
            android:id="@+id/bank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/piggybank"
            android:padding="@dimen/_20sdp"
            app:tint="@color/grey"></ImageView>
        <TextView
            android:layout_below="@+id/bank"
            android:id="@+id/earnd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp" android:fontFamily="@font/lato"
            android:text="You've earned"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/greymid"
            android:textSize="18dp"/>
        <LinearLayout
            android:id="@+id/llpp"
            android:layout_below="@+id/earnd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            >
        <TextView

            android:id="@+id/points"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:text="40"
            android:gravity="bottom" android:fontFamily="@font/lato"
            android:textColor="@color/themered"
            android:textSize="@dimen/_22sdp"/>

        <TextView
            android:layout_toRightOf="@id/points"
            android:id="@+id/pointsofar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Points so far..." android:fontFamily="@font/lato"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/greymid"
            android:textSize="18dp"/>

        </LinearLayout>
        <TextView
            android:layout_below="@+id/llpp"
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can earn more points \n by refering the Platform to your \n friends and family"
            android:paddingLeft="@dimen/_5sdp" android:fontFamily="@font/lato"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textSize="18dp"/>
        <TextView
            android:layout_below="@+id/txt"
            android:id="@+id/refer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refer and Earn"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold" android:fontFamily="@font/lato"
            android:gravity="center"
            android:textColor="@color/themered"
            android:textSize="18dp"/>
        <View
            android:id="@+id/view"
            android:layout_below="@+id/refer"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_110sdp"
            android:layout_marginRight="@dimen/_110sdp"
            android:background="@color/themered"
            ></View>
        <LinearLayout
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/border"
            android:backgroundTint="@color/themered"
            >
            <TextView
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Redeem Points"
                android:gravity="center" android:fontFamily="@font/lato"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                ></TextView>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
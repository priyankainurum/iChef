<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.BusinessDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/statsbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            ><ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back"
            android:paddingLeft="@dimen/_10sdp"
            ></ImageView>
            <TextView
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:text="Business Details" android:fontFamily="@font/lato"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16dp"/>


        </LinearLayout>

        <TextView
            android:layout_below="@+id/points"
            android:id="@+id/earnd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp" android:fontFamily="@font/lato"
            android:text="Tell us a bit more about your business"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/lightblack"
            android:textSize="16dp"/>

        <RelativeLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingRight="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:weightSum="3"
            >
            <ImageView
            android:id="@+id/btn1"
            android:layout_weight="1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/redbtn"
            ></ImageView>
            <View
                android:layout_toRightOf="@id/btn1"
                android:id="@+id/view1"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/greymid"
                ></View>

            <ImageView
                android:id="@+id/btn2"
                android:layout_toRightOf="@id/view1"
                android:layout_weight="1"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/greybtn"
                ></ImageView>
            <View
                android:id="@+id/view2"
                android:layout_toRightOf="@id/btn2"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/greymid"
                ></View>

            <ImageView
                android:layout_toRightOf="@id/view2"
                android:layout_weight="1"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/greybtn"
                ></ImageView>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Business Name"
            android:gravity="left" android:fontFamily="@font/lato"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lightblack"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"
            android:hint="Business Name"
            android:textStyle="bold"
            android:textColorHint="@color/grey"
            android:gravity="left" android:fontFamily="@font/lato"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:fallbackLineSpacing="true"
            android:textSize="@dimen/_14sdp"
            android:backgroundTint="@color/grey"
            android:textColor="@color/lightblack"
            ></EditText>
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Business Email"
            android:gravity="left" android:fontFamily="@font/lato"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lightblack"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"
            android:textStyle="bold"
            android:hint="Business Email"
            android:textColorHint="@color/grey"
            android:gravity="left" android:fontFamily="@font/lato"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:backgroundTint="@color/grey"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/lightblack"
            ></EditText>
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" I am a"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center" android:fontFamily="@font/lato"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lightblack"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rd1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:buttonTint="@color/grey"
                ></RadioButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:text="Cook" android:fontFamily="@font/lato"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/lightblack"
                ></TextView>
            <RadioButton
                android:id="@+id/rd2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:buttonTint="@color/grey"
                ></RadioButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:text="Chef"
                android:gravity="center" android:fontFamily="@font/lato"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/lightblack"
                ></TextView>
            <RadioButton
                android:id="@+id/rd3"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:buttonTint="@color/grey"
                ></RadioButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:text="Caterer" android:fontFamily="@font/lato"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/lightblack"
                ></TextView>
            <RadioButton
                android:id="@+id/rd4"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:buttonTint="@color/grey"
                ></RadioButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:text="Restaurent" android:fontFamily="@font/lato"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/lightblack"
                ></TextView>

        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Availablity in weekdays"
            android:gravity="left" android:fontFamily="@font/lato"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lightblack"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:weightSum="7"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                android:id="@+id/sun"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="S"
                android:gravity="center" android:fontFamily="@font/lato"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/circle"
                android:textColor="@color/lightblack"
                ></TextView></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                android:id="@+id/mon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="M"
                android:gravity="center" android:fontFamily="@font/lato"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/circle"
                android:textColor="@color/lightblack"
                ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                android:id="@+id/tue"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="T"
                android:gravity="center" android:fontFamily="@font/lato"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/circle"
                android:textColor="@color/lightblack"
                ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                android:id="@+id/wed"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="W"
                android:gravity="center" android:fontFamily="@font/lato"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/circle"
                android:textColor="@color/lightblack"
                ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                android:id="@+id/thu"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="T"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp" android:fontFamily="@font/lato"
                android:background="@drawable/circle"
                android:textColor="@color/lightblack"
                ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                android:id="@+id/fri"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="F"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/lato"
                android:background="@drawable/circle2"
                android:textColor="@color/lightblack"
                ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                android:id="@+id/sat"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="S"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp" android:fontFamily="@font/lato"
                android:background="@drawable/circle2"
                android:textColor="@color/lightblack"
                ></TextView>
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Location range to serve"
            android:gravity="left" android:fontFamily="@font/lato"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lightblack"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="" android:fontFamily="@font/lato"
            android:textColorHint="@color/grey"
            android:gravity="left"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:fallbackLineSpacing="true"
            android:textSize="@dimen/_12sdp"
            android:backgroundTint="@color/grey"
            android:textColor="@color/lightblack"
            ></EditText>

        <RelativeLayout
            android:id="@+id/llcontinuebd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/border"
            android:backgroundTint="@color/themered"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Next"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/_14sdp" android:fontFamily="@font/lato"
                android:textColor="@color/white"
                ></TextView>
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/forward"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/back"
                android:rotation="180"
                android:paddingLeft="@dimen/_10sdp"
                app:tint="@color/white"></ImageView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
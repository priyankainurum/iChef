<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_2sdp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_weight=".6"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/food1"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/food11"
                    android:orientation="vertical">
                <ImageView
                    android:id="@+id/driver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
               />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/bookmarkred"
                        android:src="@drawable/bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        />
                    <ImageView
                        android:visibility="visible"
                        android:id="@+id/bookmarkwhite"
                        android:src="@drawable/bookmarkwhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        />

                    <ImageView
                        android:id="@+id/share"
                        android:src="@drawable/share"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        />



                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:weightSum="2"
            android:background="@drawable/border"
            android:foregroundTint="@color/grey"
            android:orientation="horizontal">
<!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1.8">
                <ImageView
                    android:visibility="visible"
                    android:id="@+id/redheart"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/heart"
                    android:layout_gravity="center"
                    android:padding="@dimen/_2sdp"
                    ></ImageView>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/white"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/heartwhite"
                    android:layout_gravity="center"
                    android:padding="@dimen/_2sdp"
                    ></ImageView>


            </LinearLayout>
-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name" android:fontFamily="@font/lato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nameoffood"
                    android:textStyle="bold"
                    android:textColor="@color/themered"
                    android:textSize="18dp"/>


                <LinearLayout
                    android:id="@+id/star"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/stargrey"
                        ></ImageView>
                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/starhalf"
                        ></ImageView>
                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/starred"
                        ></ImageView>
                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/starred"
                        ></ImageView>
                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/starred"
                        ></ImageView>
                </LinearLayout>
                <TextView
                    android:layout_below="@id/name" android:fontFamily="@font/lato"
                    android:id="@+id/resname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resname"
                    android:textColor="@color/black"
                    android:textSize="14dp"/>

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/rlloc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/location"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/location"
                        android:padding="@dimen/_2sdp"
                        ></ImageView>
                    <TextView
                        android:layout_toRightOf="@id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:text="0.00 Miles" android:fontFamily="@font/lato"
                        android:paddingLeft="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="14dp"/>

                </RelativeLayout>
                <RelativeLayout

                    android:id="@+id/rlclock"
                    android:layout_toRightOf="@id/rlloc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/clock"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/clock"
                        android:padding="@dimen/_2sdp"
                        ></ImageView>
                    <TextView
                        android:layout_toRightOf="@id/clock"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:text="00.00 Min." android:fontFamily="@font/lato"
                        android:paddingLeft="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="14dp"/>

                </RelativeLayout>
                <TextView
                    android:id="@+id/price"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:text="N150.00"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:gravity="center"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>

            </RelativeLayout></LinearLayout>

        </LinearLayout>


<!--
        <TextView
            android:layout_weight="1.3"
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="View"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"/>
-->

    </LinearLayout>
</androidx.cardview.widget.CardView>

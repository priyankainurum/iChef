                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        />
                    <TextView
                        android:id="@+id/completedorder"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:text="Completed Orders"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        />

                    <TextView
                        android:id="@+id/cancelledorder"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:text="Cancelled Orders"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        />

                </LinearLayout>


            <!---->
            <LinearLayout
                android:id="@+id/favorder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/heart"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:tint="@color/black"
                    ></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:text="Favourite Orders"
                    android:paddingLeft="@dimen/_10sdp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myaddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/myorder"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:tint="@color/black"
                    ></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:text="My Address"
                    android:paddingLeft="@dimen/_10sdp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />
            </LinearLayout>
            <!---->
            <LinearLayout
                android:id="@+id/mycart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/cartempty"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:tint="@color/black"
                    ></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:text="My Cart"
                    android:paddingLeft="@dimen/_10sdp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />
            </LinearLayout>
<!---->
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:text="Refer a friend"
                android:gravity="left"
                android:fontFamily="@font/lato"
                android:textColor="@color/black"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/myreward"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:text="My Rewards"
                android:gravity="left"
                android:fontFamily="@font/lato"
                android:textColor="@color/black"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/serviceprovider"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:text="Become a service provider"
                android:gravity="left"
                android:fontFamily="@font/lato"
                android:textColor="@color/black"
                android:textSize="16dp"
                />
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:text="About"
                android:gravity="left" android:fontFamily="@font/lato"
                android:textColor="@color/black"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/logout"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:text="Logout"
                android:gravity="left" android:fontFamily="@font/lato"
                android:textColor="@color/black"
                android:textSize="16dp"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
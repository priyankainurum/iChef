<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.PersonalDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/statsbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            ><ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back"
            android:paddingLeft="@dimen/_10sdp"
            ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:text="Personal Details"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center" android:fontFamily="@font/lato"
                android:textColor="@color/black"
                android:textSize="16dp"/>


        </LinearLayout>
        <TextView
            android:layout_below="@+id/points"
            android:id="@+id/earnd" android:fontFamily="@font/lato"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:text="Tell us a bit more about yourself"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/lightblack"
            android:textSize="16dp"/>

        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Name" android:fontFamily="@font/lato"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lightblack"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="left" android:fontFamily="@font/lato"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:fallbackLineSpacing="true"
            android:textSize="@dimen/_12sdp"
            android:backgroundTint="@color/grey"
            android:textColor="@color/lightblack"
            ></EditText>
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Email" android:fontFamily="@font/lato"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lightblack"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="left"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp" android:fontFamily="@font/lato"
            android:layout_gravity="center"
            android:backgroundTint="@color/grey"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lightblack"
            ></EditText>


        <LinearLayout
            android:id="@+id/llcontinue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/border"
            android:backgroundTint="@color/themered"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:gravity="center" android:fontFamily="@font/lato"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                ></TextView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
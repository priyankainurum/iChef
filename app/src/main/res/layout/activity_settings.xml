<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.Settings">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/statsbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            ><ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back"
            android:paddingLeft="@dimen/_10sdp"
            ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:text="Settings"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center" android:fontFamily="@font/lato"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/setting"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/settinggrey"
                android:paddingRight="@dimen/_10sdp"
                app:tint="@color/themered"></ImageView>


        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Settings" android:fontFamily="@font/lato"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/lightblack"
            ></TextView>

        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Settings" android:fontFamily="@font/lato"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/lightblack"
            ></TextView>
        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abc Settings" android:fontFamily="@font/lato"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/lightblack"
            ></TextView>
        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xyz Settings" android:fontFamily="@font/lato"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/lightblack"
            ></TextView>


    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.MyRestaurant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/statsbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            ><ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back"
            android:paddingLeft="@dimen/_10sdp"
            ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:text=""
                android:fontFamily="@font/lato"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16dp"/>


        </LinearLayout>
        <RelativeLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/_20sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:background="@color/white"
            >
            <TextView
                android:fontFamily="@font/lato"
                android:id="@+id/txname"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:text="Shubham Jain"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"/>


            <TextView
                android:layout_below="@+id/txname"
                android:id="@+id/txhistory"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:text="Location,of the restaurent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/themered"
                android:textSize="13dp"/>

            <ImageView
                android:id="@+id/image"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/userprofilered"
                android:paddingLeft="@dimen/_10sdp"
                ></ImageView>


        </RelativeLayout>


        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/lightgrey"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:weightSum="5">
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/llmyitem"
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/immyitem"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/myitemgrey"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    ></ImageView>

                <TextView
                    android:id="@+id/txtmyitem"
                    android:layout_toRightOf="@id/location"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="My items" android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/llorders"
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imorders"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ordergrey"
                    ></ImageView>

                <TextView
                    android:id="@+id/txtorder"
                    android:layout_toRightOf="@id/location"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="Orders" android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/llnotification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imnotification"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/notificationgrey"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    ></ImageView>

                <TextView
                    android:id="@+id/txtnotification"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="Notifications"
                    android:gravity="center" android:fontFamily="@font/lato"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/llsettings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imsetting"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/settinggrey"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"
                    ></ImageView>

                <TextView
                    android:id="@+id/txtsetting"
                    android:layout_toRightOf="@id/location"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="Settings" android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/llpayments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/impayment"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/payementgrey"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    ></ImageView>

                <TextView
                    android:id="@+id/txtpayment"
                    android:layout_toRightOf="@id/location"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="Payments"
                    android:gravity="center" android:fontFamily="@font/lato"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />



            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/lightgrey"
            ></View>
        <LinearLayout
            android:id="@+id/llmyitemtab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/lltxviewitem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="View items"
                    android:gravity="center" android:fontFamily="@font/lato"
                    android:textColor="@color/themered"
                    android:textSize="16dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/lltxmanageitem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtmanage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="Manage Item"
                    android:gravity="center" android:fontFamily="@font/lato"
                    android:textColor="@color/lightblack"
                    android:textSize="16dp"/>



            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/lltxadditem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtadd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="Add Item"
                    android:gravity="center" android:fontFamily="@font/lato"
                    android:textColor="@color/lightblack"
                    android:textSize="16dp"
                    />

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/lightgrey"
            ></View>

        <!--viewitem-->
        <androidx.recyclerview.widget.RecyclerView
         android:visibility="visible"
       android:id="@+id/rvfood"
       android:layout_width="match_parent"
       android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
        <!--managetem-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/managelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/additem"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                ></ImageView>

            <TextView
                android:layout_toRightOf="@id/location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp" android:fontFamily="@font/lato"
                android:text="Manage Item in Progress"
                android:gravity="center"
                android:textColor="@color/themered"
                android:textSize="16dp"
                />



        </LinearLayout>
        <!--additem-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/addlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/additem"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                ></ImageView>

            <TextView
                android:layout_toRightOf="@id/location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:text="Click the above buttton to \n add new item"
                android:gravity="center" android:fontFamily="@font/lato"
                android:textColor="@color/themered"
                android:textSize="16dp"
                />



        </LinearLayout>
        <!--notification-->
        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/rvnotification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
        <!--Orders-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/llactiveorder"
            android:orientation="vertical"
            >
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
        <TextView

            android:layout_toRightOf="@id/location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:text="Active Orders" android:fontFamily="@font/lato"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:textColor="@color/themered"
            android:textSize="16dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:visibility="visible"
            android:id="@+id/rvorders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

        <TextView

            android:layout_toRightOf="@id/location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:text="My Schedule this month"
            android:gravity="left" android:fontFamily="@font/lato"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:textColor="@color/themered"
            android:textSize="16dp"
            />
        <CalendarView
            android:visibility="visible"
            android:id="@+id/simpleCalendarView"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:background="@color/grey"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"

            ></CalendarView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView></LinearLayout>
    </LinearLayout>


</LinearLayout>
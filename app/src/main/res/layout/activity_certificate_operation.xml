         <LinearLayout
             android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            >
            <TextView
                android:layout_weight=".4"
                android:id="@+id/certification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/lato"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_5sdp"
                android:text="Certificate of abc"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_12sdp"></TextView>
            <ImageView
                android:id="@+id/tik3"
                android:visibility="gone"
                android:layout_weight="1.6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/ticksmall"></ImageView>
            <ImageView
                android:id="@+id/add3"
                android:visibility="visible"
                android:layout_weight="1.6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/addicon"></ImageView>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"></View>
        <ImageView
            android:visibility="gone"
            android:id="@+id/upload3"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:src="@android:drawable/ic_menu_camera"></ImageView>

<!--
        <EditText
            android:id="@+id/certification2"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="" android:fontFamily="@font/lato"
            android:hint="Certificate of xyz"
            android:textColorHint="@color/grey"

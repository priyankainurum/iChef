<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.CertificateOperation">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/statsbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            ><ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back"
            android:paddingLeft="@dimen/_10sdp"
            ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:text="Certificate of Operation"
                android:layout_gravity="center_vertical"
                android:gravity="center" android:fontFamily="@font/lato"
                android:textColor="@color/black"
                android:textSize="16dp"/>


        </LinearLayout>
        <TextView
            android:layout_below="@+id/points"
            android:id="@+id/earnd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="Please provide the certificates \nof your business"
            android:layout_gravity="center_vertical"
            android:gravity="center" android:fontFamily="@font/lato"
            android:textColor="@color/lightblack"
            android:textSize="16dp"/>
        <RelativeLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingRight="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:weightSum="3"
            >
            <ImageView
                android:id="@+id/btn1"
                android:layout_weight="1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/tick"
                ></ImageView>
            <View
                android:layout_toRightOf="@id/btn1"
                android:id="@+id/view1"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/themered"
                ></View>

            <ImageView
                android:id="@+id/btn2"
                android:layout_toRightOf="@id/view1"
                android:layout_weight="1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/redbtn"
                ></ImageView>
            <View
                android:id="@+id/view2"
                android:layout_toRightOf="@id/btn2"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/greymid"
                ></View>

            <ImageView
                android:layout_toRightOf="@id/view2"
                android:layout_weight="1"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/greybtn"
                ></ImageView>

        </RelativeLayout>


        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Passport photo"
            android:gravity="left" android:fontFamily="@font/lato"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lightblack"
            ></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            >
        <TextView
            android:layout_weight=".4"
            android:id="@+id/passphoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:fontFamily="@font/lato"
            android:gravity="left|center"
            android:text="passportphoto.jpeg"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/_12sdp"></TextView>
            <ImageView
                android:id="@+id/tik1"
                android:visibility="gone"
                android:layout_weight="1.6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/ticksmall"></ImageView>
            <ImageView
                android:id="@+id/add1"
                android:visibility="visible"
                android:layout_weight="1.6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/addicon"></ImageView>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"></View>

        <ImageView
            android:visibility="gone"
            android:id="@+id/upload1"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:src="@android:drawable/ic_menu_camera"></ImageView>

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" License 1"
            android:gravity="left" android:fontFamily="@font/lato"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lightblack"
            ></TextView>
<!--
        <EditText
            android:id="@+id/licence"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text=""
            android:hint="License1.jpeg"
            android:drawableRight="@drawable/ticksmall"
            android:textColorHint="@color/grey"
            android:gravity="left" android:fontFamily="@font/lato"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:backgroundTint="@color/grey"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lightblack"
            ></EditText>
-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            >
            <TextView
                android:layout_weight=".4"
                android:id="@+id/licence"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/lato"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_5sdp"
                android:text="License1.jpeg"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_12sdp"></TextView>
            <ImageView
                android:id="@+id/tik2"
                android:visibility="gone"
                android:layout_weight="1.6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/ticksmall"></ImageView>
            <ImageView
                android:id="@+id/add2"
                android:visibility="visible"
                android:layout_weight="1.6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/addicon"></ImageView>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"></View>

        <ImageView
            android:visibility="gone"
            android:id="@+id/upload2"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:src="@android:drawable/ic_menu_camera"></ImageView>



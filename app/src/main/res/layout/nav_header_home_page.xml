<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_160sdp"
    android:background="@color/grey"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:padding="@dimen/_2sdp"
    >

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:weightSum="2">

        <TextView android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:textSize="@dimen/_17sdp"
            android:textColor="@color/white"
            android:text="Welcome !"
            android:gravity="bottom"
            android:paddingTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"/>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:layout_weight="0.7">

<!--
            <ImageView
                android:id="@+id/profileimage"
                android:layout_width="46dp"
                android:layout_height="@dimen/_60sdp"
                android:layout_weight="1.7"
                android:contentDescription="@string/nav_header_desc"
                android:src="@drawable/user"
                android:tint="@color/colorWhite" />
-->

            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"

                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/firstname" android:fontFamily="@font/lato"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:text="@string/nav_header_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                    <TextView
                        android:padding="@dimen/_2sdp" android:fontFamily="@font/lato"
                        android:id="@+id/lastname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:text="@string/nav_header_title"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


                </LinearLayout>
                <TextView
                    android:id="@+id/profilecontact" android:fontFamily="@font/lato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="@string/nav_header_subtitle"
                    android:paddingBottom="@dimen/_5sdp"/>                <!--
                            <TextView
                                android:layout_marginTop="@dimen/_2sdp"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_11sdp"
                                android:id="@+id/mobno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9876543210" />
                -->


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>


</LinearLayout>
